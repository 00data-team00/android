<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.data.app.presentation.home.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_home_to_aiPractice"
            app:destination="@id/aiPracticeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/stay"
            app:popEnterAnim="@anim/stay"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/aiPracticeFragment"
        android:name="com.data.app.presentation.home.ai_practice.AIPracticeFragment"
        android:label="ai_practice">

        <action
            android:id="@+id/action_aiPractice_to_practiceRecords"
            app:destination="@id/previousPracticeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/stay"
            app:popEnterAnim="@anim/stay"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/previousPracticeFragment"
        android:name="com.data.app.presentation.home.ai_practice.previous_practice.PreviousPracticeFragment"
        android:label="previous_practice"></fragment>

    <fragment
        android:id="@+id/communityFragment"
        android:name="com.data.app.presentation.community.CommunityFragment"
        android:label="community">
        <action
            android:id="@+id/action_communityFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/stay"
            app:popEnterAnim="@anim/stay"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.data.app.presentation.community.PostDetailFragment"
        android:label="post_detail">
        <argument
            android:name="post"
            app:argType="com.data.app.data.Post"></argument>
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.data.app.presentation.explore.ExploreFragment"
        android:label="map"></fragment>
    <fragment
        android:id="@+id/myFragment"
        android:name="com.data.app.presentation.MyFragment"
        android:label="my"></fragment>
</navigation>