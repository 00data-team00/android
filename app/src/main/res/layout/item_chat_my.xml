<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_chat_my"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingBottom="2dp"
    android:layout_gravity="end"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_first"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_chat_first_green"
        app:layout_constraintDimensionRatio="1.5:1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="-14dp"
        android:background="@drawable/ic_chat_green"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"
        app:layout_constraintEnd_toStartOf="@id/iv_first"
        app:layout_constraintStart_toStartOf="@id/tv_chat"
        app:layout_constraintTop_toTopOf="@id/tv_chat" />

    <TextView
        android:id='@+id/tv_chat'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="65dp"
        android:maxWidth="280dp"
        android:text="ddddddd"
        android:gravity="start"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_background"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="61dp"
        android:text="@string/chat_item_date"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_chat"
        app:layout_constraintEnd_toEndOf="@id/tv_chat"
        app:layout_constraintBottom_toBottomOf="@id/iv_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>