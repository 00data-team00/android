<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id='@+id/et_comment_write'
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_post_gray"
        android:gravity="top"
        android:textSize="12sp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/post_write"
        android:textSize="14sp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_comment_write"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/et_comment_write"
        app:layout_constraintEnd_toEndOf="@id/et_comment_write"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>