<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_practice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id='@+id/iv_background'
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.1:1.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@id/iv_background"
        app:layout_constraintTop_toTopOf="@id/iv_background"
        app:layout_constraintStart_toStartOf="@id/iv_background"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="sub title"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/ai_practice_essential_green"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/bg_text_ai_light_green"
        app:layout_constraintTop_toTopOf="@id/tv_ai_role"
        app:layout_constraintBottom_toBottomOf="@id/tv_ai_role"
        app:layout_constraintStart_toStartOf="@id/tv_sub_title"/>

    <TextView
        android:id="@+id/tv_ai_role"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_title"
        app:layout_constraintStart_toEndOf="@id/tv_ai"
        app:layout_constraintEnd_toEndOf="@id/tv_sub_title"/>

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/bg_text_user_green"
        app:layout_constraintTop_toTopOf="@id/tv_user_role"
        app:layout_constraintStart_toStartOf="@id/tv_sub_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_role"/>

    <TextView
        android:id="@+id/tv_user_role"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ai_role"
        app:layout_constraintStart_toEndOf="@id/tv_user"
        app:layout_constraintEnd_toEndOf="@id/tv_sub_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>